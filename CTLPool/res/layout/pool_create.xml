<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

   <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/tvCreatePool"
            android:text="Create Pool"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1"
            android:gravity="center"
            />     
        
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/textView1"
            android:text="From* :"
            android:textAppearance="?android:attr/textAppearanceLarge"            
            android:gravity="center"
            />

        <Spinner
            android:id="@+id/spinFrom"
            android:layout_weight="1"
            android:gravity="left"
             />
        
    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/textView2"
            android:text="To* :"
            android:textAppearance="?android:attr/textAppearanceLarge"            
            android:gravity="center"
            />

        <Spinner
            android:id="@+id/spinTo"
            android:layout_weight="1"
            android:gravity="left"
             />
        
    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/tvVia"
            android:text="Via* :"
            android:textAppearance="?android:attr/textAppearanceLarge"            
            android:gravity="center"
            />

        <Spinner
            android:id="@+id/spinVia"
            android:layout_weight="1"
            android:gravity="left"
             />
        
    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/tvDate"
            android:text="Date* :"
            android:textAppearance="?android:attr/textAppearanceLarge"            
            android:gravity="center"
            />
        <EditText
         android:id="@+id/etDate"                  
         android:layout_marginLeft="5dp"
         android:layout_height="wrap_content"         
         android:inputType="none"
         android:layout_weight="1"
         android:clickable="false"
         android:cursorVisible="false"
         android:focusable="false"
         android:focusableInTouchMode="false"
         >
		</EditText>

        <ImageButton
         android:id="@+id/ibDate"         
		 android:layout_height="wrap_content"
		 android:src="@drawable/ic_launcher" />
        
    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/tvTime"
            android:text="Time* :"
            android:textAppearance="?android:attr/textAppearanceLarge"            
            android:gravity="center"
            />
        
        <EditText
         android:id="@+id/etTime"                  
         android:layout_marginLeft="5dp"
         android:layout_height="wrap_content"         
         android:inputType="none"
         android:layout_weight="1"
         android:clickable="false"
         android:cursorVisible="false"
         android:focusable="false"
         android:focusableInTouchMode="false"
         >
		</EditText>

        <ImageButton
         android:id="@+id/ibTime"         
		 android:layout_height="wrap_content"
		 android:src="@drawable/ic_launcher" />
        
    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/tvVehicle"
            android:text="Vehicle* :"
            android:textAppearance="?android:attr/textAppearanceLarge"            
            android:gravity="center"
            />
        <EditText
         android:id="@+id/etVehicle"                  
         android:layout_marginLeft="5dp"
         android:layout_height="wrap_content"         
         android:inputType="text"
         android:layout_weight="1"
         >
		</EditText>     
        
    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/tvSeats"
            android:text="Seats* :"
            android:textAppearance="?android:attr/textAppearanceLarge"            
            android:gravity="center"
            />
        <EditText
         android:id="@+id/etSeats"                  
         android:layout_marginLeft="5dp"
         android:layout_height="wrap_content"         
         android:inputType="text"
         android:layout_weight="1"
         >
		</EditText>   
        
    </TableRow>
    <TableRow
        android:id="@+id/tableRow9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" 
        android:layout_gravity="center">

        <Button 
            android:id="@+id/bCreatePool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Create"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
    </TableRow>

</TableLayout>